\newcommand\listaxsize{\tiny}
\newcommand\listaxh{\bfseries}
\newcommand\listaxl{\upshape}

\newcommand\listax[2]{%
  \bgroup
  \scantokens{%
    \catcode`\,\active\def,{\\ &}
