\newcommand\paginaesq{
	\setlength{\unitlength}{1mm}
	\begin{picture}(0,0)
		\put(-4,-5.4){\makebox(0,0)[r]{
			\begin{tabular}{@{}l@{ }r@{}}
				\makebox[5mm][l]{\pagingsize\textbf{\thepage}} &
				\interno@reguapagina
			\end{tabular}
		}}
	\end{picture}
}

% usado para controlar quando dentro de páginas pretas
\newif\if@paginapreta

\let\oldnewpage\clearpage
\renewcommand\clearpage{
	\oldnewpage

	\if@paginapreta
		\pagecolor{black}
	\else
		\pagecolor{white}
	\fi

	\thispagestyle{empty}
}

\let\oldpagebreak\pagebreak
\renewcommand\pagebreak{
	\oldpagebreak

	\if@paginapreta
		\pagecolor{black}
		\thispagestyle{empty}
	\else
		\pagecolor{white}
	\fi
}

